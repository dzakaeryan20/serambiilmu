<div class="container-fluid" style="margin-top: 70px">
    <div class="row mt50">
      <div class="col-xs-12">
            <h2 align="center">Add Post</h2>
        </div>
    </div>
  
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
            <div class="tab-ticket-status" style="background-color: white; padding: 10px; box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3); border: 1px;">
                
                <form action="/admin/save" method="POST" enctype="multipart/form-data" >
                    
                    <div class="form-group">
                        <label for="">Judul</label>
                        <input type="text" class="form-control" id="hotel_name" placeholder="Judul" name="judul" >
                    </div>
                    <div class="form-group">
                        <label for="">Description</label>
                        <input type="text" class="form-control" id="hotel_code" placeholder="Description" name="deskripsi" >
                    </div>
                    <div class="form-group">
                        <label for="">Upload Data</label>
                        <input type="file" class="form-control" id="country" placeholder="Folder rar or zip" name="file" >
                    </div>
                    <div class="form-group">
                        <label for="">Artikel</label>
                        <!-- <input type="text" class="form-control" id="city" placeholder="City" name="city" > -->
                        <textarea class="form-control form-description" style="height: 320px" name="artikel" id="" placeholder="Write Article"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Submit</button>
                        <a href="/" class="btn btn-danger">Back</a>
                    </div>
                     
                </form>
  
            </div>
        </div>
    </div>
  </div>